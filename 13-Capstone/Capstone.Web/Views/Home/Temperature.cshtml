@model Capstone.Web.Models.Temperature

@{
    ViewData["Title"] = "Temperature";
}

<h2>Temperature</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Temperature">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TempSettings" class="control-label"></label>
                <select asp-for="TempSettings" asp-items="Model.Options" class="form-control"></select>
                <span asp-validation-for="TempSettings" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
